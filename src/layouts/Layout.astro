---
import Header from '../components/Header.astro';
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<meta name="title" content="Spotlight project" />
		<meta
		name="description"
		content="Spotlight Project by Luana"
	  	/>
		<!-- Open Graph / Facebook -->
	 	<meta property="og:url" content="https://spotlightproject.vercel.app" />
		<meta property="og:site_name" content="https://spotlightproject.vercel.app" />
		<meta property="og:type" content="website" />
		<meta
		property="og:title"
		content={title}
		/>
		<meta
		property="og:description"
		content="Spotlight Project by Luana"
		/>

		<meta property="og:image" content="https://spotlightproject.vercel.app/placeholder.png" />
		<!-- Twitter -->
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content="Spotlight Project by Luana" />
		<meta name="twitter:image" content="https://spotlightproject.vercel.app/placeholder.png" />
		<meta name="twitter:card" content="summary_large_image" />

	</head>

	<body>
		<Header />
		<slot />
		<footer class="py-4 mt-8 relative">
			<div class="container mx-auto text-center text-sm">
				<a href="https://lumamontes.vercel.app" target="_blank" class="text-gray-400 hover:text-white">
					 Made by Luma üó£Ô∏è
				</a>
			</div>
		</footer>
	</body>
</html>

<style is:global>
	@import url('https://fonts.googleapis.com/css?family=Montserrat:400,700');

	:root {
		--accent: 65, 83, 241;
		--accent-light: 116, 180, 238;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}
	* {
		box-sizing: border-box;
		margin: 0;
		padding: 0;
	}
	html {
		font-family: system-ui, sans-serif;
		background: #13151b;
		background-size: 224px;
		color: white;
	}

	body {
		font-family: 'Montserrat', sans-serif;
	}

</style>
