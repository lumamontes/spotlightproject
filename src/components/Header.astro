--- 

const currentPath = Astro.url.pathname;


---
<header>
    <div class="container">
      <a href="/" class="logo">
          <img src="logo2.png" alt="logo2" width="50px" height="50px">
      </a>
      <nav class="site-nav">
          <ul>
            <li><a href="/about" class={currentPath === '/about' ? 'active' : ''} >About</a></li>
            <li><a href="/contact" class={currentPath === '/contact' ? 'active' : ''} >Contact</a></li>
          </ul> 
      </nav>
      
      <div class="menu-toggle">
        <div class="hamburger"></div>
      </div>
      
    </div>
    
    </header>

<style>

.container {
  width: 95%;
  max-width: 1000px;
  margin: 0 auto;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

header {
  color: #ececec;
  padding: 1em 0;
  position: relative;
  background: transparent;
}

header::after {
  content: '';
  clear: both;
  display: block;
}

.logo {
  margin: 0;
  font-weight: 700;
}

.logo span {
  font-weight: 400;
}

.site-nav {
  position: absolute;
  top: 100%;
  right: 0%;
  z-index: 9999;
  clip-path: circle(0px at top right);
  transition: clip-path ease-in-out 700ms;
  background: #13151b;
  /*   display: none; */
}

.site-nav--open {
  z-index: 9999;
  clip-path: circle(250% at top right);
/*   display: block; */
}

.site-nav ul {
  margin: 0;
  padding: 0;
  list-style: none;
}

.site-nav li {
  border-bottom: 1px solid #575766;
}

.site-nav li:last-child {
  border-bottom: none;
}

.site-nav a {
  color: #ececec;
  display: block;
  padding: 2em 4em 2em 1.5em;
  text-decoration: none;
}

.site-nav a:hover,
.site-nav a:focus {
  background: 65, 83, 241;
  color: #464655;
}

.site-nav--icon {
  display: inline-block;
  font-size: 1.5em;
  margin-right: 1em;
  width: 1.1em;
  text-align: right;
  color: rgba(255,255,255,.4);
}

.menu-toggle {
  padding: 1em;
  position: absolute;
  top: .5em;
  right: .5em;
  cursor: pointer;
}

.hamburger,
.hamburger::before,
.hamburger::after {
  content: '';
  display: block;
  background: #EBEBD3;
  height: 3px;
  width: 1.75em;
  border-radius: 3px;
  transition: all ease-in-out 500ms;
}

.hamburger::before {
  transform: translateY(-6px);
}

.hamburger::after {
  transform: translateY(3px);
}

.open .hamburger {
  transform: rotate(45deg);
}

.open .hamburger::before {
  opacity: 0;
}

.open .hamburger::after {
  transform: translateY(-3px) rotate(-90deg);
}

@media (min-width: 700px) {
  
  .menu-toggle {
    display: none;
  }
  
  .site-nav {
    height: auto;
    position: relative;
    background: transparent;
    float: right;
    clip-path: initial;
  }
  
  .site-nav li {
    display: inline-block;
    border: none;
  }
  
  .site-nav a {
    padding: 0;
    margin-left: 3em;
  }
  
  .site-nav a:hover,
  .site-nav a:focus {
    background: transparent;
  }
  
  .site-nav--icon {
    display: none;
  }

  .active {
    color: #fff;
    border-bottom: 2px solid #fff;
  }
  
}
</style>

<script>
const menuToggle = document.querySelector('.menu-toggle') as HTMLElement;
const siteNav = document.querySelector('.site-nav') as HTMLElement;

menuToggle.addEventListener('click', function() {
  siteNav.classList.toggle('site-nav--open');
  this.classList.toggle('open');
});
</script>